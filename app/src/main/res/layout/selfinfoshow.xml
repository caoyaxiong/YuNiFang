<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
       >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="商品详情"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="25sp"/>
        <ImageView
            android:onClick="back"
            android:background="@mipmap/hwpush_ic_toolbar_back_normal_pressed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"/>
        <ImageView
            android:onClick="login"
            android:background="@mipmap/b_newmine_tabbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            />
        
    </RelativeLayout>
    <ImageView
        android:id="@+id/info_iv"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        />
    <TextView
        android:id="@+id/text_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/info_tv"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/nowPrice"
            android:textColor="@color/red"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/oldPrice"
            android:textColor="@color/textHui"
            android:layout_marginLeft="20dp"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    
   
   
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_marginLeft="15dp"
            android:drawableLeft="@mipmap/phone"
            android:gravity="center_vertical"
            android:text=" 客服"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="加入购物车"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_height="match_parent"
            android:background="@color/huang"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="立即购买"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"/>
    </LinearLayout>
</RelativeLayout>